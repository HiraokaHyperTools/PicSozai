<Window x:Class="PicSozai.SetteiWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SetteiWindow" Height="312" Width="531" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="10">
            <Label>検索対象のフォルダー一覧</Label>
            <TextBox Height="150" Text="{Binding Dirs}"  AcceptsReturn="True" />
            <Label>コマンド：</Label>
            <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Padding="5" Name="bSave" Click="bSave_Click">設定を保存します</Button>
                <TextBlock Width="5" />
                <Button Padding="5" Name="bNear" Click="bNear_Click">取り敢えずデフォルトの Pics フォルダを作成 &amp; 追加します</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
